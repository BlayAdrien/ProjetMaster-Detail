<Page x:Class="JeanBombeur.Sandwich"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JeanBombeur"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Sandwich">

    <Page.Background>
        <ImageBrush ImageSource="/Image/Logo/Background.jpg" Stretch="UniformToFill" />
    </Page.Background>


    <Grid>
        <local:UC_TypePlat/>
        <Button Content="Accueil" Click="Accueil" HorizontalAlignment="Right" VerticalAlignment="Top" Height="50" Width="50" Background="#FF262626" Foreground="White" BorderBrush="White"/>
        <Button Content="Ajouter au panier" Click="Panier" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="50" Background="#FF262626" Foreground="White" BorderBrush="White"/>
        <Button Content="Ajouter un plat" Click="AjoutPlat" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="50" Width="100" Background="#FF262626" Foreground="White" BorderBrush="White"/>

    </Grid>
</Page>

