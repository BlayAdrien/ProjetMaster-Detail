<UserControl x:Class="JeanBombeur.UC_TypePlat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JeanBombeur"
             xmlns:my="clr-namespace:Metier;assembly=Metier"
             mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView DockPanel.Dock="Left" x:Name="listPlat" HorizontalAlignment="Left"
                  IsSynchronizedWithCurrentItem="True" 
                  ItemsSource="{Binding ListPlat}"
                  >
            <ListView.ItemTemplate >
                <DataTemplate>
                    <TextBlock Text="{Binding NomPlat}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ContentControl Content="{Binding ElementName=listPlat, Path=ItemsSource}">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Foreground="Black" Text="{Binding NomPlat}" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource Titre}"  />
                            <Image  Source="{Binding Image}" Grid.Column="0" Grid.Row="1" Style="{StaticResource Image}"/>
                            <StackPanel Grid.Column="1" Grid.Row="1">
                                <local:UCPrixTaille PrixPlat="{Binding PrixPlat}" TaillePlat="{Binding Taille}"/>
                            </StackPanel>
                                
                            
                            <TextBlock x:Name="Ecriture"  Text="Ingredient" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="2" FontFamily="Verdana" FontSize="25"/>
                            <ListView DockPanel.Dock="Left" Name="listIngredient" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding ListIngredient, Mode=OneWay}" HorizontalAlignment="Center" Margin="0,10,20,0" BorderBrush="Transparent" Grid.ColumnSpan="2" Grid.Row="3" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </Grid>
</UserControl>

