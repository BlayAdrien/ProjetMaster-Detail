<UserControl x:Class="JeanBombeur.UCPrixTaille"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:Metier;assembly=Metier"
             xmlns:local="clr-namespace:JeanBombeur"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding TaillePlat, ElementName=root}"/>
        <TextBlock Text="{Binding PrixPlat, ElementName=root}" Grid.Row="1"/>
    </Grid>
</UserControl>
