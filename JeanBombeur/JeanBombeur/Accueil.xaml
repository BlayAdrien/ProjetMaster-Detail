<Page x:Class="JeanBombeur.Accueil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JeanBombeur"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Accueil">

    <Page.Background>
        <ImageBrush ImageSource="/Image/logo1.jpeg" Stretch="Uniform" />
    </Page.Background>

    <Grid>
        <StackPanel VerticalAlignment="Bottom">
            <Button Content="Lancer l'opération" Height="30" Click="Button_Click1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,85"/>
            <ProgressBar Name="mProgressBar" Height="20" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Page>
