<Page x:Class="JeanBombeur.Accueil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JeanBombeur"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Accueil">
<!-- IMAGE EN FOND D'ECRAN -->
    <Page.Background>
        <ImageBrush ImageSource="/Image/Logo/logoApli.png" Stretch="Uniform" />
    </Page.Background>
    
<!-- MIS EN PLACE D'UN BOUTON -->
    <Grid>
        <StackPanel VerticalAlignment="Bottom">
            <Button Content="Lancer l'application" Height="30" Click="Button_Click1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,85"/>
        </StackPanel>
    </Grid>
</Page>
